{
    "name": "sitelease/sl-example-theme-recipe",
    "description": "The core deployment recipe for sitelease.ca",
    "type": "silverstripe-recipe",
    "keywords": [
        "sitelease",
        "core",
        "recipe",
        "silverstripe"
    ],
    "require": {
        "php": ">=7.0.0",
        "silverstripe/recipe-plugin": "^1.3",
        "silverstripe/recipe-cms": "^4",
        "jonom/silverstripe-betternavigator": "^4.1.1",
        "silverstripe/environmentcheck": "^2.0",
        "heyday/silverstripe-menumanager": "~3.0.0"
    },
    "require-dev": {
        "phpunit/PHPUnit": "^5.7"
    },
    "extra": {
        "project-files": [
            ".editorconfig",
            ".example.env",
            ".gitignore",
            ".htaccess",
            "phpunit.xml.dist",
            "app/_config/*",
            "app/src/*",
            "app/tests/*",
            "public/*",
            "theme-default/*"
        ],
        "public-files": [
            "assets/*",
            "theme-default/dist/css/*",
            "theme-default/dist/fonts/*",
            "theme-default/dist/images/*",
            "theme-default/dist/js/*"
        ],
        "expose": [
            "theme-default/dist/css",
            "theme-default/dist/fonts",
            "theme-default/dist/images",
            "theme-default/dist/js"
        ]
    },
    "config": {
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
