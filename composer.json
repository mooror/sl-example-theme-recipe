{
    "name": "sitelease/sl-example-theme-recipe",
    "description": "The core deployment recipe for sitelease.ca",
    "type": "silverstripe-recipe",
    "keywords": [
        "sitelease",
        "core",
        "recipe",
        "silverstripe"
    ],
    "require": {
        "php": ">=5.6.0",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "4.3.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "extra": {
        "project-files": [
            "app/_config/*",
            "app/src/*",
            "app/tests/*",
            "theme-default/*",
            ".editorconfig",
            ".example.env",
            ".gitignore",
            "phpunit.xml.dist"
        ],
        "public-files": [
            "assets/*"
        ],
        "expose": [
            "theme-default/dist/js",
            "theme-default/dist/css",
            "theme-default/dist/fonts",
            "theme-default/dist/images"
        ]
    },
    "config": {
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
